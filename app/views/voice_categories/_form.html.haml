= form_for @voice_category do |f|
  - if @voice_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@voice_category.errors.count, "error")} prohibited this voice_category from being saved:"
      %ul
        - @voice_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.time_select :start_time ,:include_seconds => true, :discard_hour => true, :include_blank => true
  .field
    = f.label :end_time
    = f.time_select :end_time, :include_seconds => true, :discard_hour => true, :include_blank => true
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'
